<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Top Title -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Motivation Boost"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"/>

    <!-- Center Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">

        <!-- The Main Quote Text -->
        <TextView
            android:id="@+id/tvMainQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The best way to predict the future is to create it."
            android:textColor="@color/text_primary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Author Text -->
        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peter Drucker"
            android:textColor="#A1887F"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="48dp"/>

        <!-- Yellow Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMotivation"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/button_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_yellow"
            app:cornerRadius="32dp"
            android:stateListAnimator="@null"
            app:elevation="0dp"
            android:letterSpacing="0.02"
            android:layout_marginBottom="32dp"/>

        <!-- Share Icon Button -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_bg">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_share"
                app:tint="@color/text_primary"/>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>